    <style>
        /*Flexbox container */
        .flex-container {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }
    
        .small-box {
            width: 80px;
            height: 80px;
            background-color: #90caf9;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
    
        /* Media Query */
        @media (max-width: 600px) {
            .flex-container {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>

</head>
